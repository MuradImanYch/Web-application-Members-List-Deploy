{
    "version": 2,
    "builds": [
      { "src": "index.js", "use": "@vercel/node" },
      { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/.*", "dest": "index.js", "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
      { "src": "/(.*)", "dest": "/public/index.html" }
    ]
  }